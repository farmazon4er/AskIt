<% provide :page_title, "Question" %>
<% currently_at("Question") %>
<h1 class="mb-4"><%= @question.title %></h1>
<time datetime="<%= @question.formated_created_at %>"><%= @question.formated_created_at %></time>
<p class="lead my-3"><%= @question.body %></p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
            data: { method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">
<h2>Write your answer</h2>

<%= render 'answers/form' %>

<h2 class="mt-3">Answer</h2>

<% @answers.each do |a| %>
<article class="mb-3">
  <time datetime="<%= a.formated_created_at %>">
    <small><%= a.formated_created_at %></small>
  </time>

  <p><%= a.body %></p>
  <%= link_to 'Edit answers', edit_question_answer_path(@question, a), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Destroy answers', question_answer_path(@question, a), class: 'btn btn-danger btn-sm',
              data: { method: :delete, confirm: 'Are you sure?'} %>
  <hr>
</article>
<% end %>