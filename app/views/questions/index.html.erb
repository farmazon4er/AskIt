<% provide :page_title, "Questions" %>
<% currently_at("Questions") %>
<h1 class="mb-4">Question</h1>

<%= link_to 'New question', new_question_path, class: "btn btn-primary btn-lg mb-2" %>
<%== pagy_bootstrap_nav @pagy %>
<% @questions.each do |q| %>
  <article class="card">
    <div class="card-body">
      <h2><%= q.title %></h2>
      <section class="card-text">

        <time datetime="<%= q.formated_created_at %>">
          <small><%= q.formated_created_at %></small>
        </time>

        <p class="my-2"><%= truncate(strip_tags(q.body), length: 150, omission: '... (continued)') %>
        </p>
      </section>

  <%= link_to 'Show', question_path(q), class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_question_path(q), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', question_path(q), class: 'btn btn-danger',
              data: { method: :delete, confirm: 'Are you sure?'} %>
    </div>
  </article>
<% end %>
<%== pagy_bootstrap_nav @pagy %>