<%= form_with model: @question do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, require: true, minlength: 2, placeholder: "Title" %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body, require: true, minlength: 2, placeholder: "Body" %>
  </div>


  <%= f.submit "Submit question" %>

<% end %>