<article class="mb-3" id=answer-<%= answer.id %>>
  <time datetime="<%= answer.formated_created_at %>">
    <small><%= answer.formated_created_at %></small>
  </time>

  <div>
    <%= sanitize answer.body %>
  </div>
  <%= link_to 'Edit answers', edit_question_answer_path(question, answer), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Destroy answers', question_answer_path(question, answer), class: 'btn btn-danger btn-sm',
              data: { method: :delete, confirm: 'Are you sure?'} %>
  <hr>
</article>