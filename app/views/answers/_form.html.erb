<%= render 'shared/error', object: @answer %>
<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: "Title", class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Submit answers", class: "btn btn-primary" %>
<% end %>